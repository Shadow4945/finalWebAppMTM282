html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
        h1= "THE MESSAGE BOARD"
    body
        nav
            each navOption in navOptions
                if navOption.show
                    a(href=navOption.path)=navOption.name
        div(class="viewPost")
            h1(id="myH1")= title
            label Post Subject: 
            span #{message.title}
            p
                | Posted by: 
                | #{user.username} 
                img(src=user.avatar_img)
                |  on #{message.date_posted}
            label Thread:
            p
                | #{message.body}
            each reply in postReplies
                p #{reply.text}
            a(href='/editPost/' + message.title) Edit
            a(href='/deletePost/' + message.title) Delete
        script(src="/js/scripts.js")