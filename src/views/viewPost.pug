html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
        h1= "THE MESSAGE BOARD"
    body
        nav
            each navOption in navOptions
                if navOption.show
                    a(href=navOption.path)=navOption.name
        div(class="viewPost")
            h1(id="myH1")= title
            label Post Subject: 
            span #{message.title}
            p
                | Posted by: 
                | #{user.username} 
                img(src=user.avatarImg)
                |  on #{message.date_posted}
            label Thread:
            p(id='pThread')
                | #{message.body}
            div(class="postReplies")
                each reply in postReplies
                    p #{reply.text}
            form(class='replies', name='replies', action='/viewPost')
                textarea(id='replyContent', name='replyPost', placeholder="Enter a comment...")
            a(href='/editPost/' + message.title) Edit
            a(href='/deletePost/' + message.title) Delete
            input(type='submit', value="Post Comment")
        script(src="/js/scripts.js")