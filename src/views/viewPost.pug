html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
    body
        nav
            each navOption in navOptions
                if navOption.show
                    a(href=navOption.path)=navOption.name
        div(class="viewPost")
            h1(id="myH1")= title
            label Post Subject:
            p
                | #{message.title}
            p
                | Posted by: 
                img(src=user.avatar_img)
                | #{user.username} on #{message.date_posted}
            label Thread:
            br
            p
                | #{message.body}
            a(href='/editPost/' + message.title) Edit
            a(href='/deletePost/' + message.title) Delete
        script(src="/js/scripts.js")