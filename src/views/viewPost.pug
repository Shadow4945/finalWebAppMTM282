html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
    body
        nav
            each navOption in navOptions
                a(href=navOption.path)=navOption.name
        div(class="viewPost")
            h1(id="myH1")= title
            label Post Subject:
            br
            p
                | #{message.title}
            br
            p
                | Posted by:
                img(src=user.avatar_img)
                | #{user.username} on #{message.date_posted}
            label Thread:
            br
            p
                | #{message.body}
        script(src="/js/scripts.js")