html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
    body
        nav
            each navOption in navOptions
                a(href=navOption.path)=navOption.name
        div(class=["container"])
            h1(id="myH1")= title
            p= "Below is a single monster's details"
            div(class="monsterBox")
                div(class="left")
                    img(src=monster.imgUrl,class=["monsterIcon","left"])
                div(class="left")
                    div(class="monsterName")=monster.name
                    div
                        div(class=["left","padRight"])
                            h3="Element"
                            div=monster.element
                        div(class=["left","padRight"])
                            h3="Ailments"
                            ul
                                each i in monster.ailments
                                    li=i
                        div
                            a(href="/mh/deleteMonster/"+monster.name)="delete"
        script(src="/js/scripts.js")