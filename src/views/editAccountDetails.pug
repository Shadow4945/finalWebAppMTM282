html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
    body
        nav
            each navOption in navOptions
                a(href=navOption.path)=navOption.name
        div(class="editAccountDetails")
            h1(id="myH1")= title
            p= "Edit your account."
            form(id='editForm', method='post', action='/editAccountDetails')
                label Profile Picture
                br
                img(src=currentUser.image)
                br
                input(type='file', name='newpfp')
                br
                label Username:
                br
                input(type='text', name='newUsername', value=currentUser.username)
                br
                label Email:
                br
                input(type='email', name='newEmail', value=currentUser.email)
                br
                label Age:
                br
                input(type="number", name='newAge', value=currentUser.age)
                br
                labe Role: #{currentUser.role}
                br
                span User
                input(type='radio', name='user', value='user')
                br
                span Admin
                input(type='radio', name='admin', value='admin')
                br
                input(type='submit', value='Update')
        script(src="/js/scripts.js")