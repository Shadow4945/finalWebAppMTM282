html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
    body
        nav
            each navOption in navOptions
                a(href=navOption.path)=navOption.name
        div(class=["container"])
            h1(id="myH1")= title
            p= "Use the form below to add a new Monster Record"
            form(action="/mh/addMonster",method="post",class="addForm")
                div
                    label="Name"
                    input(type="text",name="name")
                div
                    label="Element"
                    input(type="text",name="element")
                div
                    label="Ailments"
                    input(type="text",name="ailments")
                div
                    label="Image Url"
                    input(type="text",name="imgUrl")
                div
                    input(type="submit",value="go")
        script(src="/js/scripts.js")