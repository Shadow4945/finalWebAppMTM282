html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
    body
        nav
            each navOption in navOptions
                a(href=navOption.path)=navOption.name
        div(class="newPost")
            h1(id="myH1")= title
            p= "Submit a new post"
            form(id='newPostForm', method='post', action='newPost')
                label Post Subject:
                br
                input(type='text', name='subject')
                br
                br
                label Body:
                br
                textarea(id='content', name='body')
                //- input(type='text', name='body')
                br
                input(type='submit', value='Post')
        script(src="/js/scripts.js")