html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
        div(class="loginNav")
            a(href="/login") Login
            a(href="/createAccount") Create Account
    body
        nav
            each navOption in navOptions
                if navOption.show
                    a(href=navOption.path)=navOption.name
        div(class="index")
            h1(id="myH1")= title
            p= "Welcome to the Messages of the World!"
            div(class='threads')
                each thread in threads
                    ul
                        li
                            a(href="/post/" + thread.title) #{thread.title}
        script(src="/js/scripts.js")