html
  head
    title= title
    link(rel="stylesheet", href="/css/styles.css")
  body
    div(class='login')
      h1(id="myH1")= title
      form(id='form', method='post', action='/login')
          label Username:
          br
          input(type='text', name='username')
          br
          label Password:
          br
          input(type='password', name='pass')
          br
          input(type='submit', value='submit')