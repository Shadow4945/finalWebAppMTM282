html
    head
        title= title
        link(rel="stylesheet", href="/css/styles.css")
        h1= "THE MESSAGE BOARD"
    body
        nav
            each navOption in navOptions
                if navOption.show
                    a(href=navOption.path)=navOption.name
        div(class="editPost")
            h1(id="myH1")= title
            p= "Edit your post."
            form(id='form', method='post', action='/editPost')
                label Post Subject:
                input(type='hidden',name='originalName', value=currentPost.title)
                br
                input(type='text', name='editSubject', value=currentPost.title)
                br
                label Body:
                br
                textarea(id='bodyContent', name='editThread')= currentPost.body
                br
                input(type='submit', value='Update')
        script(src="/js/scripts.js")